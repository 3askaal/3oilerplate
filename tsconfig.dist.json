{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "removeComments": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "esModuleInterop": true,
    "typeRoots": ["index.d.ts", "node_modules/@types"]
  },
  "include": ["src/core", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
